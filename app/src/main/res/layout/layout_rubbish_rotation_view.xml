<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/rotation_iv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginBottom="6dp"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        android:alpha="0"/>

    <com.ymc.avfulscandemo.view.RotationCircleView
        android:id="@+id/rotation_rcl"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginBottom="42dp"
        android:scaleType="centerCrop" android:layout_weight="1"
        android:layout_centerInParent="true"/>

    <TextView
        android:textSize="10sp"
        android:id="@+id/rotation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/rotation_rcl"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>